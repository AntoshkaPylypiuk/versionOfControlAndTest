<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="460.0" prefWidth="753.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.lv.pylypiuk.anton.youtubetutorialfxdb.SignUpController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <AnchorPane prefHeight="403.0" prefWidth="756.0" style="-fx-background-color: #2e3348;">
        <children>
            <AnchorPane layoutY="123.0" prefHeight="280.0" prefWidth="751.0" style="-fx-background-color: #fafafa;">
                <children>
                    <TextField fx:id="login_field" layoutX="14.0" layoutY="60.0" prefHeight="31.0" prefWidth="349.0" promptText="Логін" style="-fx-background-color: #fafafa;">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </TextField>
                    <PasswordField fx:id="password_field" layoutX="361.0" layoutY="60.0" prefHeight="25.0" prefWidth="376.0" promptText="Пароль" style="-fx-background-color: #fafafa;">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </PasswordField>
                    <Button fx:id="SignUpButton" layoutX="228.0" layoutY="225.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="270.0" style="-fx-background-color: #F39C63;" text="Зареєструватись" textFill="WHITE">
                        <font>
                            <Font name="Arial" size="19.0" />
                        </font>
                    </Button>
               <TextField fx:id="signUpCountry" layoutX="14.0" layoutY="109.0" prefHeight="31.0" prefWidth="349.0" promptText="Країна" style="-fx-background-color: #fafafa;">
                  <font>
                     <Font size="15.0" />
                  </font>
               </TextField>
               <TextField fx:id="signUpLastName" layoutX="361.0" layoutY="14.0" prefHeight="31.0" prefWidth="376.0" promptText="Фамілія" style="-fx-background-color: #fafafa;">
                  <font>
                     <Font size="15.0" />
                  </font>
               </TextField>
               <CheckBox fx:id="signUpCheckBoxOther" layoutX="531.0" layoutY="116.0" mnemonicParsing="false" selected="true" text="Бойовий вертоліт" />
               <CheckBox fx:id="signUpCheckBoxMale" layoutX="361.0" layoutY="116.0" mnemonicParsing="false" text="Чоловік" />
               <CheckBox fx:id="signUpCheckBoxFemale" layoutX="453.0" layoutY="116.0" mnemonicParsing="false" text="Жінка" />
               <TextField fx:id="signUpName" layoutX="14.0" layoutY="14.0" prefHeight="31.0" prefWidth="349.0" promptText="Ім'я" style="-fx-background-color: #fafafa;">
                  <font>
                     <Font size="15.0" />
                  </font>
               </TextField>
                </children>
            </AnchorPane>
            <Label layoutX="213.0" layoutY="28.0" text="Авторизація" textFill="WHITE">
                <font>
                    <Font name="Arial Black" size="45.0" />
                </font>
            </Label>
        </children>
    </AnchorPane>
</VBox>
